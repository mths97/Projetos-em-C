#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
    setlocale (LC_ALL, "portuguese");
    char mensagem [100] = {'a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z'};
    char x, y;
    long i, rot;

    printf ("Digite a palavra: ");
    scanf ("%s", &mensagem);
    printf ("\nQuantidade de rotações: ");
    scanf ("%ld", &rot);

    for (i=0; mensagem[i]!='\0'; i++)
    {
        x = mensagem[i];

        if (x >= 'a' && x <= 'z')
        {
            x = x + rot;

            if (x > 'z')
            {
                x = x - 'z' + 'a' -1;
            }
            mensagem[i] = x;
        }
    }

    printf ("\nMensagem encriptada: %s", mensagem);

    return 0;
}
