//O quadrado de um número n é igual a soma dos n números ímpares começando por 1. 
// Por exemplo: 3² = 1 + 3 + 5 = 9.

#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
  setlocale (LC_ALL, "portuguese");
  
  int n, i, soma = 0;
  
  printf ("Digite um número: \n");
  scanf ("%d", &n);
  
  printf ("O quadrado de %d é ", n);
  
  for (i=1; n>0; n--)
  {
    soma += i;
    i += 2;
  }
  
  printf ("%d.", soma);

return 0;
}
